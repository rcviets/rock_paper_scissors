package rockPaperScissors;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.SwingConstants;
import java.awt.Font;
import java.awt.GridLayout;
import java.util.Random;
import java.awt.FlowLayout;
import javax.swing.JButton;
import javax.swing.ImageIcon;

/**
 * 
 * @author Randa Viets & Samuel Franks
 *
 */

@SuppressWarnings("serial")
public class GuiRockPaperScissors extends JFrame {

	private JPanel contentPane;
	private RockPaperScissorsPanel leftPCPanel;
	private RockPaperScissorsPanel rightPlayerPanel;
	private final Random rand = new Random();

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					GuiRockPaperScissors frame = new GuiRockPaperScissors();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public GuiRockPaperScissors() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 350);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(new BorderLayout(0, 0));
		
		JLabel lblTitleLabel = new JLabel("Rock Paper Scissors");
		extracted(lblTitleLabel);
		
		JPanel panel = new JPanel();
		contentPane.add(panel, BorderLayout.CENTER);
		
		JPanel buttonPanel = new JPanel();
		extracted(buttonPanel);
		
		JButton btnRockButton = new JButton("ROCK");
		buttonPanel.add(btnRockButton);
		
		JButton btnPaperButton = new JButton("PAPER");
		buttonPanel.add(btnPaperButton);
		
		JButton btnScissorsButton = new JButton("SCISSORS");
		buttonPanel.add(btnScissorsButton);
		

	}
	
	private JPanel createDisplayPanel() {
		JPanel displayPanel = new JPanel();
		displayPanel.setBorder(new EmptyBorder(10,10,10,10));
		displayPanel.setLayout(new GridLayout(1,0,10,0));
		
		leftPCPanel = new RockPaperScissorsPanel(getRandomRockPaperScissors());
		displayPanel.add(leftPCPanel);
		
		rightPlayerPanel = new RockPaperScissorsPanel(getRandomRockPaperScissors());
		displayPanel.add(rightPlayerPanel);
	}
	
	private RockPaperScissors getRandomRockPaperScissors() {
		ThrowType[] allTypes = ThrowType.values();
		int randomIndex = rand.nextInt(allTypes.length);
		ThrowType randomType = allTypes[randomIndex];
		
		return new RockPaperScissors(randomType);
	}

	private void extracted(JPanel panel) {
		contentPane.add(panel, BorderLayout.SOUTH);
		panel.setLayout(new FlowLayout(FlowLayout.CENTER, 5, 5));
	}

	private void extracted(JLabel lblTitleLabel) {
		lblTitleLabel.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblTitleLabel.setHorizontalAlignment(SwingConstants.CENTER);
		contentPane.add(lblTitleLabel, BorderLayout.NORTH);
	}
}
